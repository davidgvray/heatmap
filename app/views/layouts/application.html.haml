!!!
%html
  %head
    %title= page_title
    = stylesheet_link_tag 'application'
    = google_jquery
    = javascript_include_tag 'application'
  %body
    #wrapper
      #header
        = link_to image_tag('logo.png', :size => '180x75'), '/', :id => 'logo'
      
        #nav
          %ul
            - if current_user
              %li= link_to 'Dashboard', root_path
              %li= link_to 'Quizzes', quizzes_path
              %li= link_to 'Account', edit_user_path
              %li= link_to 'Logout', logout_path
            - else
              %li= link_to 'Home', '/'
              %li= link_to 'Quizzes', quizzes_path
              %li= link_to 'Signup', signup_path
              %li= link_to 'Login', login_path
            
      %hr#split
      
      #content
        
        = content_tag(:div, flash[:success], :id => 'success', :class => 'flash') if flash[:success]
        = content_tag(:div, flash[:failure], :id => 'failure', :class => 'flash') if flash[:failure]
        
        #left= yield
        
        #right= yield(:right)
        
      #footer