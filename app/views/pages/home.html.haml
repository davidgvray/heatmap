- @page_title = 'Participate And Create Online Surveys'

%h2 Create and Participate in Online Surveys

/ #surveys_box
/   .box
/     %h3 Recently Added
/     %ul
/       - Survey.recently_added.each do |survey|
/         %li= link_to truncate(h(survey.title), :length => 45), survey_path(survey)
/   
/   .box.end
/     %h3 Recently Updated
/     %ul
/       - Survey.recently_updated.each do |survey|
/         %li= link_to truncate(h(survey.title), :length => 45), survey_path(survey)
/   
/ 
/ = render :partial => 'categories/list'
/               
/ - content_for :right do
/   
/   %h3 Recently Viewed
/   
/   .show_table
/     %table
/       %thead
/         %tr
/           %th Title
/           %th Last Viewed
/       %tbody
/         - Survey.recently_viewed.each do |survey|
/           %tr{:class => cycle('even', ['even', 'odd'])}
/             %td= link_to truncate(h(survey.title), :length => 35), survey_path(survey)
/             %td= time_ago_in_words(survey.last_viewed) + ' ago'