- @page_title = "Section ##{@section.id}: #{@section.title}"

- if current_user
  - if owner? or suggester?
    #mid_nav= link_to 'Edit Section', edit_survey_section_path(@survey, @section), :class => 'edit'

= survey_link

%h2= @page_title

#show_section= @section.description

.heading
  %h3= 'Questions (' + @questions.count.to_s + ')'
  = link_to 'Add Question', new_survey_section_question_path(@survey,@section), :class => 'add'

.content
  = render :partial => 'questions/list', :locals => {:questions => @questions}

